{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node"
  },
  "include": ["server.ts", "src/lib/**/*.ts"],
  "exclude": ["node_modules", ".next", "src/app/**/*", "src/components/**/*", "src/hooks/**/*", "src/contexts/**/*"]
}